<Page x:Class="Loot_Table.CashGen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Loot_Table"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
>

    <Grid>
        <GroupBox Header="Level" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
            <StackPanel >
                <RadioButton x:Name="RBlow" Content="0-4"/>
                <RadioButton x:Name="RBmid" Content="5-10"/>
                <RadioButton x:Name="RBhigh" Content="11-16"/>
                <RadioButton x:Name="RBhighest" Content="17+"/>
            </StackPanel>
        </GroupBox>
        <Label x:Name="label" Content="Loot:" HorizontalAlignment="Left" Margin="10,109,0,0" VerticalAlignment="Top"/>
        <Button x:Name="Generate" Content="Generate" HorizontalAlignment="Left" Margin="77,20,0,0" VerticalAlignment="Top" Width="75" Click="Generate_Click"/>
        <ListBox x:Name="Lboxloot" Height="97" Margin="10,135,10,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
